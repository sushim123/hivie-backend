<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Size of Company</title>
</head>
<body>
  <h1>Update Size of Company</h1>

  <% if (successMessage) { %>
    <p style="color: green;"><%= successMessage %></p>
  <% } %>

  <% if (errorMessage) { %>
    <p style="color: red;"><%= errorMessage %></p>
  <% } %>

  <form action="/api/v1/brand/size-of-company" method="POST">
    <label for="userId">User ID:</label><br>
    <input type="text" id="userId" name="userId" placeholder="Enter User ID" required><br><br>

    <label for="sizeOfCompany">Size of Company:</label><br>
    <select id="sizeOfCompany" name="sizeOfCompany" required>
      <% sizeOfCompanyOptions.forEach(option => { %>
        <option value="<%= option %>"><%= option %></option>
      <% }) %>
    </select><br><br>

    <button type="submit">Submit</button>
  </form>
</body>
</html>
